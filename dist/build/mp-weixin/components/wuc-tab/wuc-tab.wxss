
._div,
scroll-view,
swiper {
	box-sizing: border-box;
}
.wuc-tab {
    white-space: nowrap;
    color: #837777;
    background: #fef3f3;
}
.wuc-tab-item {
    height: 90rpx;
    display: inline-block;
    line-height: 90rpx;
    margin: 0 10rpx;
    padding: 0 20rpx;
}
.wuc-tab-item.cur {
    border-bottom: 4rpx solid;
}
.wuc-tab.fixed {
	position: fixed;
	width: 100%;
	top: 0;
	z-index: 1024;
	box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
}
.flex {
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
}
.text-center {
    text-align: center;
}
.flex-sub {
    -webkit-flex: 1;
        -ms-flex: 1;
            flex: 1;
}
